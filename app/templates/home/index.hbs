<section class="page-header">
  <h1>Alright, let's do this! </h1>
</section>

<div id="alert" class="alert" style="display:none">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <span id="alert-error"><span>
</div>
    
<form id="add-record" class="form-inline">
  <fieldset>
    <legend>Add a Record</legend>
    <input type="text" name="name" placeholder="Student Name">
    <input type="text" name="grade" placeholder="Grade">
    <button type="submit" class="btn">Submit</button>
  </fieldset>
</form>

<div class="row-fluid">
  <div class="span8">
    <section id="records" class="records">
      <table class="table">
        <thead>
          <tr>
            <th>Student</th>
            <th>Grade</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        {{{students}}}
        </tbody>
      </table>
    </section>
  </div>

  <div class="span4">
    <section id="stats">
      <table class="table">
        <thead>
          <tr>
            <th>Max Grade</th>
            <th>Min Grade</th>
            <th>Average Grade</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td id="maxGrade">{{maxGrade}}</td>
            <td id="minGrade">{{minGrade}}</td>
            <td id="avgGrade">{{avgGrade}}</td>
          </tr>
        </tbody>
      </table>
    </section>
  </div>

</div>

